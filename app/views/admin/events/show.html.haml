= title @event.title

%h1.left #{@event.title}
.add.right
  = link_to "Edit", [:edit, :admin, @event], :class => 'edit_button'
  == |
  = link_to "Public View", @event, :class => 'public_view', :target => '_blank'
.clear

%dl.w50.strict
  %dt Category
  %dd= @event.category_name
  - if @event.has_owner?
    %dt Owner
    %dd= @event.user.name
  %dt Description
  %dd= @event.description
  %dt Date
  %dd= @event.start
  - if @event.has_time?
    %dt Time
    %dd= @event.start_time.to_s(:time_12)
  - if @event.has_photo?
    %dt Photo
    %dd
      = image_tag @event.photo.url(:medium)
      %br
      = image_tag @event.photo.url(:small)
      %br
      = image_tag @event.photo.url(:thumb)
  
%p
  = link_to "All Events", [:admin, :events], :class => 'index_button'
  
