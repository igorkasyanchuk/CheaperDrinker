= title @event.title

%h1 #{@event.title}

- if logged_in? && current_user.admin?
  %p= link_to 'Edit', [:edit, :admin, @event], :class => 'edit_button'

.date #{@event.start.to_date.to_s(:short_date_2)}
- if @event.has_time?
  .time= @event.start_time.to_s(:time_12)
- else
  .date #{@event.start.to_date}
  - if @event.has_time?
    .time= @event.start_time.to_s(:time_12)

- if @event.has_photo?
  = image_tag @event.photo.url(:medium), :class => 'event_image'
  
= simple_format @event.description

%p
  = @event.category_name

.clear    
    
%p.links
  = link_to "View all Events >>", [:events]