= title @location.name

= content_for :map do
  == <script src="http://maps.google.com/maps?file=api&amp;v=2&amp;sensor=false&amp;key=#{GOOGLE_KEYS[Rails.env.to_s]}" type="text/javascript"></script>
  = javascript_include_tag 'Tooltip.v2'  

= content_for :on_ready do
  !== show_place_map(#{@location.map_info.to_json});
  $("#post_comment").colorbox({width:"50%", inline:true, href:"#comments" });

%h1= @location.name
%address= @location.full_address

.bar

  .w49.left
    %strong Find your special in #{@location.name}
    %ul
      - DAYS_FOR_SPECIALS.keys.each do |day|
        - next unless @location.special?(day)
        %li
          .day= day.to_s.titleize
          .description= simple_format(@location.special_for_day(day))
  
  .w49.left
    .right
      %strong.grey
        Last updated on: #{@location.updated_at.to_date}
    .clear
    #map
  
.clear

- if logged_in?
  %a{:href => '#comments', :id => 'post_comment'} Add Comment
- else
  %strong Create an #{link_to 'account', new_user_path} or #{link_to 'login', new_user_session_path} to post comments.

.comments_container
  = render :partial => '/places/comments', :locals => { :location => @location }

- if logged_in?
  .none
    #comments
      = semantic_form_for [@location, @comment], :html => { :id => 'post_comment_form' }, :remote => true do |f|
        %h3 Post Your Comment
        = f.inputs do
          = f.input :user_id, :value => current_user.id, :as => :hidden
          = f.input :comment, :input_html => { :rows => '5', :cols => '40' }
        = f.buttons do
          = f.submit "Post", :id => 'post_comment_button'        