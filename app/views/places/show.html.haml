= title "#{@location.name} Specials, #{@location.name} Hours, #{@location.city} | #{SEO_TITLE_SHORT}"
= description "Happy hour in #{@location.name}, #{@location.name} specials, schedule, #{@location.city}"
= keywords "#{@location.name}, #{@location.city}, hours, schedule, happy hour, specials, #{SEO_KEYWORDS}"

.bar_specials_list
  - if @location.synopsis.present?
    .synopsis.text_containter= simple_format @location.synopsis

  %ul
    - DAYS_FOR_SPECIALS.keys.each do |day|
      - next unless @location.special?(day)
      %li
        .day= day.to_s.titleize
        .description= simple_format(@location.special_for_day(day))