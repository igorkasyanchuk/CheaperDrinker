= title "Manage Event Categories"

.add.right
  = link_to "Add Event Category", [:new, :admin, :event_category], :class => 'add_button'
.clear  

%table.zebra.w50
  %tr
    %th Name
    %th Actions
  - @event_categories.each do |event_category|
    %tr{ :class => cycle(:odd, :even)}
      %td= event_category.name
      %td
        = link_to 'show', [:admin, event_category], :class => 'show_button'
        = link_to 'edit', [:edit, :admin, event_category], :class => 'edit_button'
        = link_to 'remove', [:admin, event_category], :method => :delete, :confirm => 'Are you sure?', :class => 'delete_button'
  %tr
    %td{:colspan => 2}
      %strong Total: #{EventCategory.count}