  == <script src="http://maps.google.com/maps?file=api&amp;v=2&amp;sensor=false&amp;key=#{GOOGLE_KEYS[Rails.env.to_s]}" type="text/javascript"></script>
  = javascript_include_tag 'clusterer2'
  = javascript_include_tag 'markerclusterer_packed'
  
- content_for :on_ready do
  !== show_bars_on_map();
  updateMap('home');
  init_day_filter();

.contentwrapper
  .right_content
    #global_map.none
%div.left_content
  .welcome_message.none
    %h1 Yould find best bars for you.
    %strong Using simple 3 steps
    %ol
      %li Select on may your region
      %li Zoom-in to see list of bars
      %li Find best for you by bar special description
  #sidebar.none
    .select_date
      = select_tag :day, options_for_select(DAYS_FOR_SPECIALS.keys.collect{|d| [d.to_s.titleize, d]}, @current_date), :id => 'select_date', :class => 'simple'
    .title.text_center
      %strong Bars Currently Displayed
    %p None
