.location{ :class => cycle(:odd, :even), :id => "location-#{location.id}" }
  .name= link_to location.name, place_path(location)
  .full_address= location.full_address
  .specials
    - location.special_days.each do |day|
      %span= day
    &nbsp;
  .message!= RedCloth.new(location.description).to_html
  .controls
    = link_to 'edit', [:edit, :dashboard, current_user, location], :class => 'edit_button'
    = link_to 'remove', [:dashboard, current_user, location], :remote => true, :method => :delete, :confirm => 'Are you sure?', :class => 'delete_button'
    = link_to "comments(#{location.comments_count})", [:dashboard, current_user, location, :comments], :class => 'index_button'
  .clear