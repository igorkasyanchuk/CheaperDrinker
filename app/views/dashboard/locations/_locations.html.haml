.locations
  - if user.locations.count > 0
    .location
      .name 
        %strong Name
      .full_address 
        %strong Full Address
      .specials
        %strong Specials
      .message 
        %strong Description
      .controls 
        %strong Actions
      .clear  
    - user.locations.backward.each do |location|
      = render :partial => '/dashboard/locations/location', :locals => { :location => location }
    .location.summary
      .amount.amount_total
        %strong Total: #{pluralize(user.locations.count, 'location')}
      .clear
  - else
    .locations_list_is_empty
      %i List is empty. Add location.