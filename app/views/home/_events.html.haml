%ul
  - events.each do |event|
    %li
      .event_icon= link_to (image_tag event.photo.url(:thumb)), event
      %strong.event_name= link_to event.title, event
      - if event.location
        %span.category= link_to event.location.name, events_place_path(event.location)
      %span.date
        = event.start.to_date.to_s(:short_date_2)
        - if event.has_time?
          = event.start_time.to_s(:time_12)
      .clear

= link_to "View all Events >>", [:events], :class => 'view_all_events'  